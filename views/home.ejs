<%- include('header', {title: "Home" }) %>

  <!-- Hero Section -->
  <div class="container text-center my-5">
    <h1 class="fw-bold">Welcome to My Blog</h1>
    <p class="text-muted">Your source for interesting articles and insights.</p>
  </div>

  <!-- Blog Cards -->
  <div class="container">
    <div class="row g-4">
      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(function(post) { %>
          <div class="col-md-4">
            <div class="card h-100">
              <% if (post.cover_img) { %>
                <img src="<%= post.cover_img %>" class="card-img-top" alt="Cover Image">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.content.length > 120 ? post.content.substring(0, 120) + '...' : post.content %></p>
                <p class="text-muted mb-1" style="font-size:0.9em;">
                  By <%= post.author ? post.author.firstName + ' ' + post.author.lastName : 'Unknown' %>
                  <span>â€¢</span>
                  <%= new Date(post.createdAt).toLocaleDateString('en-US') %>
                </p>
                <a href="/<%= post.id %>" class="btn btn-primary">Read More</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center text-muted py-5">
          No posts yet.
        </div>
      <% } %>
    </div>
  </div>

  <%- include('footer') %>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>