<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="card shadow-sm">
          <div class="card-body text-center">

            <img src="<%= user.avatar || 'https://placehold.co/200' %>" class="rounded-circle mb-3" width="150" height="150" alt="Profile Picture">

            <h3 class="card-title mb-1"><%= user.name %></h3>
            <p class="text-muted mb-3"><%= user.email %></p>

            <ul class="list-group list-group-flush text-start">
                <li class="list-group-item"><strong>Username:</strong> <%= user.username || 'not defined' %></li>
                <li class="list-group-item"><strong>Joined:</strong> <%= user.createdAt ? user.createdAt.toDateString() : 'not defined' %></li>
                <li class="list-group-item"><strong>Role:</strong> <%= user.role || 'not defined' %></li>
            </ul>

            <div class="mt-4">
              <a href="/profile/edit" class="btn btn-outline-primary">Edit Profile</a>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
